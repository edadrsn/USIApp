<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".view.AcademicianActivity">

    <!-- TOP BANNER -->

    <LinearLayout
        android:id="@+id/topBanner"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="@drawable/card_background"
        android:orientation="horizontal"
        android:padding="16dp"
        android:paddingTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/rounded_img"
            app:srcCompat="@drawable/logo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="USİ"
                android:textColor="#FFFFFF"
                android:textSize="27sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Üniversite-Sanayi İşbirliği"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>


    <!--MAIN-->
    <LinearLayout
        android:layout_width="308dp"
        android:layout_height="332dp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="30dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/bottomLogos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topBanner">


        <TextView
            android:id="@+id/textView"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="Sicil Numaranızı Girin"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/editTextText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/topBanner"
            app:layout_constraintVertical_bias="0.0" />

        <EditText
            android:id="@+id/sicilNo"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="20dp"
            android:ems="14"
            android:hint="Sicil Numaranızı Girin"
            android:inputType="number"
            android:textColor="#000000"
            android:textColorHint="#A9A5A5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <Button
            android:id="@+id/btnSignIn"
            android:layout_width="270dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:backgroundTint="#F06E1B"
            android:elevation="8dp"
            android:fontFamily="monospace"
            android:onClick="signIn"
            android:text="Giriş Yap"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold"
            android:translationZ="4dp"
            app:cornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="OnClick"
            tools:layout_editor_absoluteY="368dp" />


        <Button
            android:id="@+id/btnBack"
            android:layout_width="270dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginVertical="12dp"
            android:backgroundTint="#FFFFFF"
            android:elevation="8dp"
            android:fontFamily="monospace"
            android:onClick="gotoBack"
            android:text="Geri Dön"
            android:textColor="#F06E1B"
            android:textSize="15sp"
            android:textStyle="bold"
            app:cornerRadius="10dp"
            android:translationZ="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:strokeColor="#F06E1B"
            app:strokeWidth="2dp"
            tools:ignore="OnClick"
            tools:layout_editor_absoluteY="467dp" />


    </LinearLayout>

    <!-- FOOTER-->

    <LinearLayout
        android:id="@+id/bottomLogos"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginBottom="45dp"
        android:background="@drawable/card_background"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:background="@drawable/rounded_img"
            android:clipToOutline="true"
            app:srcCompat="@drawable/logo" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            app:srcCompat="@drawable/valilik" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_weight="0.1"
            android:background="@drawable/rounded_img"
            app:srcCompat="@drawable/kosgeb" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:background="@drawable/rounded_img"
            android:clipToOutline="true"
            app:srcCompat="@drawable/stb" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>