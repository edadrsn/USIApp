<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="0dp"
    android:layout_marginBottom="1dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Üst kısım -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Sol resim -->
            <ImageView
                android:id="@+id/openRequestImage"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="10dp"
                android:adjustViewBounds="true"
                android:background="@drawable/rounded_img"
                android:clipToOutline="true"
                android:scaleType="centerCrop"
                android:src="@drawable/baseline_block_24" />

            <!-- Orta alan -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal">

                <!-- Talep başlığı -->
                <TextView
                    android:id="@+id/openRequestTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:text="Talep Başlığı"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- Talep tipi -->
                <TextView
                    android:id="@+id/openRequesterTypeTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:clipToOutline="true"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp"
                    android:text="Talep Tipi"
                    android:textColor="#666666"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Talep açıklaması -->
        <TextView
            android:id="@+id/openRequestMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:ellipsize="end"
            android:scrollHorizontally="false"
            android:singleLine="false"
            android:text="Talep açıklaması buraya gelecek..."
            android:textColor="#666666"
            android:textSize="15sp" />

        <!-- Talep oluşturulma tarihi -->
        <TextView
            android:id="@+id/openRequestDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Date"
            android:textColor="#666666"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="9dp">

            <ImageView
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_marginEnd="7dp"
                android:src="@drawable/apply_icon"/>

            <TextView
                android:id="@+id/applyCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="#000000"
                android:text="0 Adet Başvuru"/>

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>