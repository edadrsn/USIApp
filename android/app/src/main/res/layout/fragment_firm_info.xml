<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEEF5"
    tools:context=".view.view.FirmInfoFragment">

    <!--Header-->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView4"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:cardBackgroundColor="#1a9AAF"
        app:cardCornerRadius="0dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@android:color/transparent"
        app:strokeWidth="0dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Firma Bilgisi Ve Ã‡alÄ±ÅŸma AlanÄ±"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold" />

    </com.google.android.material.card.MaterialCardView>

    <!--ScrollView-->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/materialCardView4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:orientation="vertical"
            android:paddingTop="16dp"
            android:paddingBottom="32dp">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="135dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/materialCardView2">


                <EditText
                    android:id="@+id/firmName"
                    android:layout_width="360dp"
                    android:layout_height="54dp"
                    android:layout_gravity="center"
                    android:layout_marginVertical="7dp"
                    android:background="@drawable/edittext_bg"
                    android:hint="Firma AdÄ±"
                    android:inputType="text"
                    android:padding="12dp"
                    android:textColor="#000000"
                    android:textColorHint="#999999"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    tools:layout_editor_absoluteX="35dp"
                    tools:layout_editor_absoluteY="211dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/firmWorkArea"
                        android:layout_width="300dp"
                        android:layout_height="54dp"
                        android:layout_gravity="center"
                        android:layout_marginVertical="7dp"
                        android:background="@drawable/edittext_bg"
                        android:hint="Firma Ã‡alÄ±ÅŸma AlanÄ±"
                        android:inputType="text"
                        android:padding="12dp"
                        android:textColor="#000000"
                        android:textColorHint="#999999"
                        android:textSize="16sp"
                        android:textStyle="normal"
                        tools:layout_editor_absoluteX="35dp"
                        tools:layout_editor_absoluteY="211dp" />

                    <Button
                        android:id="@+id/addFirmWorkArea"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:backgroundTint="#1A9AAF"
                        android:elevation="8dp"
                        android:fontFamily="monospace"
                        android:gravity="center"
                        android:text="+"
                        android:textColor="#FFFFFF"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:translationZ="4dp"
                        app:cornerRadius="11dp" />


                </LinearLayout>

                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/workAreaTagContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_horizontal"
                    android:padding="4dp"
                    app:flexWrap="wrap"
                    app:justifyContent="center"
                    tools:ignore="MissingClass" />


                <Button
                    android:id="@+id/addFirmInfo"
                    android:layout_width="360dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:layout_marginVertical="7dp"
                    android:backgroundTint="#1A9AAF"
                    android:elevation="8dp"
                    android:fontFamily="monospace"
                    android:text="Ekle"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:translationZ="4dp"
                    app:cornerRadius="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteY="368dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:text="Firma Bilgilerim"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/firmContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtNoFirm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“­ HenÃ¼z hiÃ§ firma bilgisi eklenmemiÅŸ"
                        android:textColor="#626161"
                        android:textSize="15sp" />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>