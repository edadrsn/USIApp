<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".view.studentView.SignUpStudentActivity">

    <!-- Scrollview -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Scroll içeriği -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/margin_large">

            <!-- Logo -->
            <ImageView
                android:id="@+id/logoTto"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginTop="@dimen/margin_large"
                android:contentDescription="Logo"
                app:srcCompat="@drawable/usi_logo" />

            <TextView
                android:id="@+id/appName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_normal"
                android:text="Öğrenci"
                android:textColor="#000000"
                android:textSize="@dimen/text_xlarge"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/signInText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_normal"
                android:text="Hesap Oluştur"
                android:textColor="#000000"
                android:textSize="@dimen/text_large"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/chooseText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_xsmall"
                android:text="Şifrenizi Oluşturun"
                android:textColor="#000000"
                android:textSize="@dimen/text_normal" />

            <!-- Şifre -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/button_height"
                android:layout_marginTop="@dimen/margin_top_header"
                android:background="@drawable/edittext_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/padding_normal">

                <EditText
                    android:id="@+id/studentPassword"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="Şifrenizi Giriniz"
                    android:inputType="textPassword"
                    android:textColor="#000000"
                    android:textColorHint="#999999"
                    android:textSize="@dimen/text_normal2" />

                <ImageView
                    android:id="@+id/ivTogglePassword"
                    android:layout_width="37dp"
                    android:layout_height="wrap_content"
                    android:contentDescription="Şifreyi Göster"
                    android:onClick="showPassword"
                    android:padding="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/baseline_visibility_off_24"
                    tools:ignore="OnClick" />
            </LinearLayout>

            <!-- Şifre Tekrar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/button_height"
                android:layout_marginTop="@dimen/margin_top_header"
                android:background="@drawable/edittext_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/padding_normal">

                <EditText
                    android:id="@+id/studentPasswordAgain"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="Şifrenizi Tekrar Giriniz"
                    android:inputType="textPassword"
                    android:textColor="#000000"
                    android:textColorHint="#999999"
                    android:textSize="@dimen/text_normal2" />

                <ImageView
                    android:id="@+id/ivTogglePassword2"
                    android:layout_width="37dp"
                    android:layout_height="wrap_content"
                    android:contentDescription="Şifreyi Göster"
                    android:padding="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/baseline_visibility_off_24"
                    tools:ignore="OnClick" />
            </LinearLayout>

            <!-- Kayıt Ol -->
            <Button
                android:id="@+id/btnSignUpStudent"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_marginTop="@dimen/margin_normal"
                android:backgroundTint="#124090"
                android:elevation="8dp"
                android:onClick="signUpStudent"
                android:text="Kayıt Ol"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/text_normal"
                android:textStyle="bold"
                app:cornerRadius="10dp"
                tools:ignore="OnClick" />

            <!--Veya-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/margin_normal"
                android:gravity="center"
                android:orientation="horizontal">

                <View
                    android:layout_width="150dp"
                    android:layout_height="1dp"
                    android:background="#999999" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin_horizontal_s"
                    android:text="veya"
                    android:textColor="#888888"
                    android:textSize="@dimen/text_normal" />

                <View
                    android:layout_width="150dp"
                    android:layout_height="1dp"
                    android:background="#999999" />
            </LinearLayout>

            <!-- Hesabım var -->
            <Button
                android:id="@+id/haveAnAccount"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_marginVertical="@dimen/margin_xsmall"
                android:backgroundTint="#EEEEEE"
                android:onClick="haveAnAccount"
                android:text="Bir hesabım var"
                android:textColor="#000000"
                android:textSize="15sp"
                app:cornerRadius="10dp"
                tools:ignore="OnClick" />

            <!-- Şifremi Unuttum -->
            <Button
                android:id="@+id/forgotPassword"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_marginVertical="@dimen/margin_xsmall"
                android:backgroundTint="#EEEEEE"
                android:text="Şifremi Unuttum"
                android:textColor="#000000"
                android:textSize="@dimen/text_normal"
                app:cornerRadius="10dp"
                android:onClick="forgotPassword"
                tools:ignore="OnClick" />

            <!--Alt Bilgi-->
            <TextView
                android:id="@+id/footerText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_large"
                android:layout_marginBottom="400dp"
                android:text="@string/text_signIn"
                android:textAlignment="center"
                android:textColor="#888888"
                android:textSize="@dimen/text_small" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>