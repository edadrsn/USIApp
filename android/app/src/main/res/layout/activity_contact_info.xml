<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".view.academicianView.ContactInfoActivity">

    <!--Header-->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView2"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="0dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toTopOf="@+id/scrollView9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@android:color/transparent"
        app:strokeWidth="0dp">

        <ImageView
            android:id="@+id/gotoAcademician"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/margin_start"
            android:layout_marginTop="@dimen/margin_top_header"
            android:onClick="goToProfile"
            android:src="@drawable/back_icon"
            tools:ignore="OnClick" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_top_header"
            android:gravity="center"
            android:text="İletişim Bilgileri"
            android:textColor="#000000"
            android:textSize="@dimen/text_normal2"
            android:textStyle="bold" />

    </com.google.android.material.card.MaterialCardView>

    <!--ScrollView-->
    <ScrollView
        android:id="@+id/scrollView9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/materialCardView2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="top"
            android:orientation="vertical"
            android:paddingTop="16dp"
            android:paddingBottom="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="20dp"
                android:layout_marginTop="65dp"
                android:text="İletişim Bilgileri"
                android:textColor="#000000"
                android:textSize="@dimen/text_normal"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/phoneNumber"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/edittext_bg"
                android:hint="Telefon Numarası"
                android:inputType="number"
                android:padding="12dp"
                android:textColor="#000000"
                android:textColorHint="#999999"
                android:textSize="16sp"
                android:textStyle="normal"
                tools:layout_editor_absoluteX="35dp"
                tools:layout_editor_absoluteY="211dp" />

            <EditText
                android:id="@+id/corporateNumber"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/edittext_bg"
                android:hint="Kurumsal Telefon Numarası"
                android:inputType="number"
                android:padding="12dp"
                android:textColor="#000000"
                android:textColorHint="#999999"
                android:textSize="16sp"
                android:textStyle="normal"
                tools:layout_editor_absoluteX="35dp"
                tools:layout_editor_absoluteY="211dp" />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/edittext_bg"
                android:hint="Eposta Adresi"
                android:inputType="textPersonName"
                android:padding="12dp"
                android:textColor="#000000"
                android:textColorHint="#999999"
                android:textSize="16sp"
                android:textStyle="normal"
                tools:layout_editor_absoluteX="35dp"
                tools:layout_editor_absoluteY="211dp" />

            <EditText
                android:id="@+id/webSite"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/edittext_bg"
                android:hint="Web Site Adresi(Opsiyonel)"
                android:inputType="textPersonName"
                android:padding="12dp"
                android:textColor="#000000"
                android:textColorHint="#999999"
                android:textSize="16sp"
                android:textStyle="normal"
                tools:layout_editor_absoluteX="35dp"
                tools:layout_editor_absoluteY="211dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2">

                <AutoCompleteTextView
                    android:id="@+id/province"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_bg"
                    android:clickable="true"
                    android:drawableEnd="@drawable/baseline_keyboard_arrow_down_24"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:hint="İlinizi Seçin"
                    android:inputType="none"
                    android:padding="12dp"
                    android:textColor="#000000"
                    android:textColorHint="#999999"
                    android:textSize="16sp"
                    android:textStyle="normal" />

                <AutoCompleteTextView
                    android:id="@+id/district"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_bg"
                    android:clickable="true"
                    android:drawableEnd="@drawable/baseline_keyboard_arrow_down_24"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:hint="İlçenizi Seçin"
                    android:inputType="none"
                    android:padding="12dp"
                    android:textColor="#000000"
                    android:textColorHint="#999999"
                    android:textSize="16sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <Button
                android:id="@+id/updateContact"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_gravity="center"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="400dp"
                android:backgroundTint="#124090"
                android:elevation="8dp"
                android:text="Güncelle"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/text_normal"
                android:textStyle="bold"
                android:translationZ="4dp"
                app:cornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="OnClick"
                tools:layout_editor_absoluteY="368dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>