<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#EFEEF5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.industryView.IndustryInfoActivity">
    
    <!-- Header -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:cardBackgroundColor="#1A9AAF"
        app:cardCornerRadius="0dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@android:color/transparent"
        app:strokeWidth="0dp">


        <ImageView
            android:id="@+id/backToProfile"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:onClick="backToProfile"
            android:src="@drawable/baseline_arrow_back_ios_24"
            tools:ignore="OnClick" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Firma Bilgileri"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold" />
    </com.google.android.material.card.MaterialCardView>

    <!--ScrollView-->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/materialCardView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="top"
        android:orientation="vertical"
        android:paddingTop="16dp"
        android:paddingBottom="32dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="100dp"
            android:layout_marginStart="20dp"
            android:text="Firma Adı"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/industryFirmName"
            android:layout_width="360dp"
            android:layout_height="54dp"
            android:layout_gravity="center"
            android:layout_marginVertical="7dp"
            android:background="@drawable/edittext_bg"
            android:hint="Firma Adı"
            android:inputType="text"
            android:padding="12dp"
            android:textColor="#000000"
            android:textColorHint="#999999"
            android:textSize="16sp"
            android:textStyle="normal"
            tools:layout_editor_absoluteX="35dp"
            tools:layout_editor_absoluteY="211dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:text="Çalışma Alanı"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/industryFirmWorkArea"
            android:layout_width="360dp"
            android:layout_height="54dp"
            android:layout_gravity="center"
            android:layout_marginVertical="7dp"
            android:background="@drawable/edittext_bg"
            android:hint="Çalışma Alanı"
            android:inputType="text"
            android:padding="12dp"
            android:textColor="#000000"
            android:textColorHint="#999999"
            android:textSize="16sp"
            android:textStyle="normal"
            tools:layout_editor_absoluteX="35dp"
            tools:layout_editor_absoluteY="211dp" />

        <Button
            android:id="@+id/saveIndustryInfo"
            android:layout_width="360dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="400dp"
            android:backgroundTint="#4CAF50"
            android:elevation="8dp"
            android:onClick="saveIndustryInfo"
            android:text="Kaydet"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold"
            android:translationZ="4dp"
            app:cornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="OnClick"
            tools:layout_editor_absoluteY="368dp" />


    </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>