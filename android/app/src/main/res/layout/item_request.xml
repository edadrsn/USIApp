<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Üst kısım -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/requestImage2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="10dp"
                android:adjustViewBounds="true"
                android:background="@drawable/rounded_img"
                android:clipToOutline="true"
                android:scaleType="centerCrop"
                android:src="@drawable/baseline_block_24" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Talep başlığı -->
                <TextView
                    android:id="@+id/titleRequest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Talep Başlığı"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- Talep tipi -->
                <TextView
                    android:id="@+id/requesterTypeTxt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/rounded_bg_person"
                    android:clipToOutline="true"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp"
                    android:text="Talep Tipi"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Sağdaki detay ikonu -->
            <ImageView
                android:id="@+id/iconDetail"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:padding="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/baseline_arrow_forward_ios_24" />
        </LinearLayout>

        <!-- Talep açıklaması -->
        <TextView
            android:id="@+id/messageRequest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="Talep açıklaması buraya gelecek..."
            android:textColor="#666666"
            android:textSize="15sp" />

        <!-- Talep oluşturulma tarihi -->
        <TextView
            android:id="@+id/dateRequest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="22.07.2025"
            android:textColor="#666666"
            android:textSize="13sp" />

        <!-- KATEGORİLER -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:overScrollMode="never"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/containerCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingEnd="16dp" />
        </HorizontalScrollView>

    </LinearLayout>

</androidx.cardview.widget.CardView>
