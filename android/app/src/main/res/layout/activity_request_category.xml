<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".view.academicianView.RequestCategoryActivity">

    <!--Header-->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardViewRequest"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="0dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@android:color/transparent"
        app:strokeWidth="0dp">

        <ImageView
            android:id="@+id/gotoBack"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_marginTop="13dp"
            android:onClick="goToBack"
            android:src="@drawable/back_icon"
            tools:ignore="OnClick" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Kategori Ekle"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

    </com.google.android.material.card.MaterialCardView>

    <!-- Scrollview -->
    <ScrollView
        android:id="@+id/scrollViewCategories"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@id/goForward"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/materialCardViewRequest">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Başlık -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Talebinizin Kategorisini Seçiniz"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Kategoriler -->
            <RadioGroup
                android:id="@+id/radioGroupAcademician"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="300dp"
                android:divider="@android:color/transparent"
                android:orientation="vertical"
                android:showDividers="none">

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/radio1"
                    style="@style/Widget.MaterialComponents.CompoundButton.RadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/radio_item_bg"
                    android:padding="10dp"
                    android:text="Araştırma Alanları"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/radio2"
                    style="@style/Widget.MaterialComponents.CompoundButton.RadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/radio_item_bg"
                    android:padding="10dp"
                    android:text="Uzmanlık Alanları"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/radio3"
                    style="@style/Widget.MaterialComponents.CompoundButton.RadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/radio_item_bg"
                    android:padding="10dp"
                    android:text="Proje Fikirleri"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/radio4"
                    style="@style/Widget.MaterialComponents.CompoundButton.RadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/radio_item_bg"
                    android:padding="10dp"
                    android:text="İş Birliği / Ortak Çalışma"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/radio5"
                    style="@style/Widget.MaterialComponents.CompoundButton.RadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/radio_item_bg"
                    android:padding="10dp"
                    android:text="Yayın &amp; Makale Desteği"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/radio6"
                    style="@style/Widget.MaterialComponents.CompoundButton.RadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/radio_item_bg"
                    android:padding="10dp"
                    android:text="Öğrenci &amp; Asistan Talepleri"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/radio7"
                    style="@style/Widget.MaterialComponents.CompoundButton.RadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/radio_item_bg"
                    android:padding="10dp"
                    android:text="Teknik / Altyapı İhtiyaçları"
                    android:textColor="#000000"
                    android:textSize="15sp" />

            </RadioGroup>

        </LinearLayout>
    </ScrollView>

    <!-- İleri Butonu -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/goForward"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="60dp"
        android:text="İleri"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:textStyle="bold"
        app:backgroundTint="#124090"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>